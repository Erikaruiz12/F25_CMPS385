#include <iostream>
#include <fstream>
#include <iomanip>
#include<string>
using namespace std;
struct Patient {
	string id;
	string name;
	string condition;
	int severity;
	Patient* next;
};
Patient* head = nullptr;
int totalServed = 0;
// Function declarations
void loadPatients();
void savePatients();
void addPatient();
void displayQueue();
void servePatient();
void showSummary();
int main() {
	loadPatients();
	int choice;
	do {
		cout << "\n****** Welcome to ER Patient Queue Manager ******\n";
		cout << "1. Add New Patient\n2. Display Patient Queue\n3. Serve Next Patient\n4.View ER Summary\n5.Exit\n→ ";
			cin >> choice;
		switch (choice) {
		case 1: addPatient(); break;
			
		case 2: displayQueue(); break;
		case 3: servePatient(); break;
		case 4: showSummary(); break;
		case 5: savePatients();
			cout << "Patient queue saved to patients.txt. Stay safe!" << endl;
			break;
		default: cout << "Invalid option. Try again.\n";
		}
	} while (choice != 5);
	system("pause");
return 0;
}
// Function definitions
// Load patients from file
void loadPatients()
{
	ifstream infile("patients.txt");
	if (!infile) return;
	while (!infile.eof()) {
		Patient* newPatient = new Patient;
		getline(infile, newPatient->id);
		if (newPatient->id.empty()) {
			delete newPatient;
			break;
		}
		getline(infile, newPatient->name);
		getline(infile, newPatient->condition);
		infile >> newPatient->severity;
		infile.ignore();
		newPatient->next = nullptr;
		if(!head) {
			head = newPatient;
		}
		else {
			Patient* temp = head;
			while (temp->next) temp = temp->next;
			temp->next = newPatient;
		}
		infile.close();

	}
}
// Save patients to file
void savePatients()
{
	ofstream outfile("patients.txt");
	Patient* temp = head;
	while (temp) {
		outfile << temp->id << endl;
		outfile << temp->name << endl;
		outfile << temp->condition << endl;
		outfile << temp->severity << endl;
		temp = temp->next;
	}
	outfile.close();
}
//	Add new patient to the queue
void addPatient()
{// Create new patient
	Patient* newPatient = new Patient;
	cout << "Please enter patient ID: ";
	cin >> newPatient->id;
	cin.ignore();
	cout << "Please enter patient name: ";
	getline(cin, newPatient->name);
	cout << "Please enter patient condition: ";
	getline(cin, newPatient->condition);
	cout << "Please enter severity level (1-5): ";
	cin >> newPatient->severity;
	newPatient->next = nullptr;
	if (!head || newPatient->severity > head->severity) {
		newPatient->next = head;
		head = newPatient;
	}
	// Insert patient in the correct position based on severity
	else {
		Patient* temp = head;
		while (temp->next && temp->next->severity >= newPatient->severity) {
			temp = temp->next;
		}
		newPatient->next = temp->next;
		temp->next = newPatient;
	}
	cout << "Patient added to the queue.\n";
}
// Display the current patient queue
void displayQueue()
{
	if(head == nullptr) {
		cout << "No patients in the queue.\n";
		return;
	}
	cout << "\n=========================Current QUeyte=======================\n";
	cout << "ID \tName\tCondition\tSeverity\n";
	cout << "--------------------------------------------------------------\n";
	Patient* temp = head;
	while (temp) {
		cout << temp->id << "\t" << temp->name << "\t" << temp->condition << "\t" << temp->severity << endl;
		temp = temp->next;
	}

}
// Serve the next patient in the queue
void servePatient()
{
	if (!head) {
		cout << "No patients to serve.\n";
		return;
	}
	Patient* temp = head;
	head = head->next;
	cout << "Serving Patient:\n";
	cout << "ID: " << temp->id << "\nName: " << temp->name << "\nCondition: " << temp->condition << "\nSeverity: " << temp->severity << endl;
	delete temp;
	totalServed++;
}
// Show ER summary
void showSummary()
{
	int count = 0;
	int severitySum = 0;

	Patient* temp = head;
	while (temp) {
		count++;
		severitySum += temp->severity;
		temp = temp->next;
	}
	cout << "\n====== ER Summary ======\n";
	cout << "Total Patients Served: " << totalServed << endl;
	cout << "Patients Quedes: " << count << endl;
	if(count > 0) {
		cout << "Average Severity of Queued Patients: " << fixed << setprecision(2) << (double)severitySum / count << endl;
	} else {
		cout << "Average Severity of Queued Patients: 0\n";
	}
	cout << "=========================\n";
}
