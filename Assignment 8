#include <iostream>
#include <fstream>
#include <iomanip>
#include <string>
using namespace std;
// Song structure
struct Song {
	int id;
	string title;
	string artist;
	float duration;
	Song* prev;
	Song* next;
};
// Global pointers
Song* head = nullptr;
Song* tail = nullptr;
Song* current = nullptr;
// Function declarations
void loadPlaylist();
void savePlaylist();
void addSong();
void displayPlaylist();
void playNext();
void playPrevious();
void removeSong();
//	Main function
int main() {
		loadPlaylist();
	int choice;
	do {
		cout << "\n****** Welcome to Music Playlist Manager ******\n";
		cout << "1. Add Song to Playlist\n2. Display Playlist\n3. Play Next Song\n4.Play Previous Song\n5.Remove Song\n6.Save and Exit\n→ ";
			cin >> choice;
		switch (choice) {
		case 1: addSong(); break;
		case 2: displayPlaylist(); break;
		case 3: playNext(); break;
		case 4: playPrevious(); break;
		case 5: removeSong(); break;
		case 6: savePlaylist();
			cout << "Playlist saved. See you next jam!" << endl;
			break;
		default: cout << "Invalid option. Try again.\n";
		}
	} while (choice != 6);
	return 0;
}
// Function definitions
void loadPlaylist()
{
	// Load playlist from file
	ifstream inFile("playlist.txt");
	if (!inFile) {
		cout << "No existing playlist found. Starting a new one.\n";
		return;
	}
	// Read songs from file
	Song* tail = nullptr;
	while (!inFile.eof()) {
		Song* newSong = new Song;
		inFile >> newSong->id;
		inFile.ignore();
		getline(inFile, newSong->title);
		getline(inFile, newSong->artist);
		inFile >> newSong->duration;
		inFile.ignore();
		newSong->prev = tail;
		newSong->next = nullptr;
		if (tail) tail->next = newSong;
		else head = newSong;
		tail = newSong;
	}
	tail = tail;
	current = head;
	inFile.close();
}
// Save playlist to file
void savePlaylist()
{
	// Save playlist to file
	ofstream outFile("playlist.txt");
	Song* temp = head;
	while (temp) {
		outFile << temp->id << endl;
		outFile << temp->title << endl;
		outFile << temp->artist << endl;
		outFile << temp->duration << endl;
		temp = temp->next;
	}
	outFile.close();
}

void addSong()
{
	// Add a new song to the playlist
	Song* newSong = new Song;
	cout << "Enter Song ID: ";
	cin >> newSong->id;
	cin.ignore();
	cout << "Enter Song Title: ";
	getline(cin, newSong->title);
	cout << "Enter Artist Name: ";
	getline(cin, newSong->artist);
	cout << "Enter Duration (in minutes): ";
	cin >> newSong->duration;
	newSong->next = nullptr;
	newSong->prev = tail;
	if (head == nullptr) {
		head = tail = current = newSong;
	}
	else {
		tail->next = newSong;
		tail = newSong;
	}
	cout << "Song added to playlist.\n";
}
//	Display the playlist
void displayPlaylist()
{
	if (head == nullptr) {
		cout << "Playlist is empty.\n";
		return;
	}
	Song* temp = head;
	cout << "\nID\tTitle\tArtist\tDuration\n";
	cout << "----------------------------------------\n";
	while (temp != nullptr) {
		cout << temp->id << "\t" << temp->title << "\t" << temp->artist << "\t" << fixed << setprecision(2) << temp->duration << " mins\n";
		temp = temp->next;
	}
}
//	Play the next song
void playNext()
{
 if (current == nullptr) {
		cout << "Playlist is empty.\n";
		return;
	}
	if (current->next != nullptr) {
		current = current->next;
		cout << "Now playing: " << current->title << " by " << current->artist << "\n";
	}
	else {
		cout << "You are at the end of the playlist.\n";
	}
}
//	Play the previous song
void playPrevious()
{
	if (current == nullptr) {
		cout << "Playlist is empty.\n";
		return;
	}
	if (current->prev != nullptr) {
		current = current->prev;
		cout << "Now playing: " << current->title << " by " << current->artist << "\n";
	}
	else {
		cout << "You are at the beginning of the playlist.\n";
	}
}
//	Remove the current song
void removeSong()
{
	// Remove the current song from the playlist
	if (current == nullptr) {
		cout << "No song to remove.\n";
		return;
	}
	Song* temp = current;
	if(temp->prev) 
		temp->prev->next = temp->next;
	else 
		head = temp->next;
	if (temp->next != nullptr) {
		temp->next->prev = temp->prev;
	}
	else {
		tail = temp->prev;
	}
	current = (temp->next) ? temp->next : temp->prev;
	delete temp;
	cout << "Song removed." << endl;
}
