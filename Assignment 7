#include <iostream>
#include <fstream>
#include <list>
#include <iomanip>
using namespace std;
struct Patient {
	string id;
	string name;
	string severity;
	int waitTime;
	string status; // "Waiting" or "Admitted"
};
// Function declarations
void loadPatients(list<Patient>& patients);
void savePatients(const list<Patient>& patients);
void registerPatient(list<Patient>& patients);
void displayQueue(const list<Patient>& patients);
void admitPatient(list<Patient>& patients);
void viewSummary(const list<Patient>& patients);
// Main function
int main() {
	list<Patient> patients;
	loadPatients(patients);
	int choice;
	do {
		cout << "\n****** Welcome to Emergency Room Queue Manager* *****\n";
			cout << "1. Register New Patient\n2. Display Patient Queue\n3. Admit Patient\n4.View ER Summary\n5.Exit\n→ ";
			cin >> choice;
		switch (choice) {
		case 1: registerPatient(patients); break;
		case 2: displayQueue(patients); break;
		case 3: admitPatient(patients); break;
		case 4: viewSummary(patients); break;
		case 5: savePatients(patients);
			cout << "Patient queue saved to patients.txt. Have a safe shift!" <<
				endl;
			break;
		default: cout << "Invalid option. Try again.\n";
		}
	} while (choice != 5);
	return 0;
}
// Function definitions
// Load patients from file
void loadPatients(list<Patient>& patients)
{
	// Open the file
	ifstream inFile("patients.txt");
	if (!inFile) {
		cout << "No existing patient data found. Starting fresh.\n";
		return;
	}
	// Read patient data
	Patient p;
	while (inFile >> p.id >> p.name >> p.severity >> p.waitTime >> p.status) {
		patients.push_back(p);
	}
	inFile.close();
}
// Save patients to file
void savePatients(const list<Patient>& patients)
{
	ofstream outFile("patient.txt");
	for (Patient p : patients)
	{
		outFile << p.id << " " << p.name << " " << p.severity << " " << p.waitTime << " " << p.status << endl;
	}
	outFile.close();

}
// Register a new patient
void registerPatient(list<Patient>& patients)
{
 Patient p;
	cout << "Enter Patient ID: ";
	cin >> p.id;
	cout << "Enter Patient Name: ";
	cin >> p.name;
	cout << "Enter Severity Level (Low/Medium/High/Critical): ";
	cin >> p.severity;
	cout << "Enter Estimated Wait Time (in minutes): ";
	cin >> p.waitTime;
	p.status = "Waiting";
	patients.push_back(p);
	cout << "Patient registered successfully.\n";
}
// Display the patient queue
void displayQueue(const list<Patient>& patients)
{
	cout << "================= Patient Queue ================\n";
	for (Patient p : patients) {
		cout << "ID: " << p.id << ", Name: " << p.name << ", Severity: " << p.severity << ", Wait Time: " << p.waitTime << " minutes, Status: " << p.status << endl;
		cout << "-----------------------------------------------\n";
	}

}
//	Admit the next patient
void admitPatient(list<Patient>& patients)
{
	if (patients.empty()) {
		cout << "No patients in the queue.\n";
		return;
	}
	patients.front().status = "Admitted";
	cout << "Patient " << patients.front().name << " has been admitted.\n";
}
// View emergency room summary
void viewSummary(const list<Patient>& patients)
{
	int totalptents = patients.size();	
	int waitingCount = 0;
	int waitTimeSum = 0;
	int admit = 0;

	for(Patient p : patients) {
		if (p.status == "Waiting") {
			waitingCount++;
			waitTimeSum += p.waitTime;
		}
		else if (p.status == "Admitted") {
			admit++;
		}
	}
	double avgTime = 0;
	if(waitingCount > 0) {
		avgTime = (double)waitTimeSum / waitingCount;
	}
	cout << "===== Emergency Room Summary =====\n";
	cout << "Total Patients: " << totalptents << endl;
	cout << "Patinets Admitted: " << admit << endl;
	cout << "Patients Waiting: " << waitingCount << endl;
	cout << " Average Wait Time: " << fixed << setprecision(2) << avgTime << " minutes\n";
	cout << "==================================\n";	
}


